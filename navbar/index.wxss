/* components/navbar/index.wxss */

.nav-wrap {
  /* display: flex; */
  flex-direction: column;
  position: fixed;
  width: 100vw;
  top: 0;
  background-color: transparent;
  color: #000;
  z-index: 999;
  box-sizing: border-box;
}

.empty-header {
  width: 100%;
}

.content-body {
  /* flex: 1; */
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
}

/* 标题要居中 */

.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 30rpx;
  color: #fff;
  /* font-weight: 600; */
}

.nav-capsule-wrapper {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  height: 100%;
}

.nav-capsule {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
  width: 174rpx;
  height: 64rpx;
  box-sizing: border-box;
  position: relative;
  border-radius: 32rpx;
}

.home-box {
  margin-left: 30rpx;
}

.nav-capsule.light {
  border: 1rpx solid rgba(0, 0, 0, 0.08);
}

.light::after {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 2rpx;
  height: 37rpx;
  background: rgba(0, 0, 0, 0.2);
  content: "";
}

.nav-capsule.dark {
  background: rgba(0, 0, 0, 0.2);
}

.dark::after {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 2rpx;
  height: 37rpx;
  background: rgba(255, 255, 255, 0.2);
  content: "";
}

.navbar-v-line {
  width: 1px;
  height: 32rpx;
  background-color: #e5e5e5;
}

.nav-capsule>view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.back-pre {
  width: 20rpx;
  height: 35rpx;
}

.back-home {
  width: 40rpx;
  height: 36rpx;
}
